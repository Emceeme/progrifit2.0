                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                    <TableRow>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="Sets"
                                android:textStyle="bold"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="Reps"
                                android:textStyle="bold"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="Rest"
                                android:textStyle="bold"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                                android:id="@+id/setsTextView5"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="3"/>
                        <TextView
                                android:id="@+id/repsTextView5"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="30 seconds"/>
                        <TextView
                                android:id="@+id/restTextView5"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="30 seconds"/>
                    </TableRow>
                </TableLayout>

                <!-- Workout 6 -->
                <ImageView
                        android:layout_width="212dp"
                        android:layout_height="398dp"
                        android:background="@drawable/bicycle_exercise"
                        android:id="@+id/imageView6"/>

                <TextView
                        android:id="@+id/workoutNameTextView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Workout 6: Bicycle Crunch"
                        android:textSize="24sp"
                        android:layout_marginTop="16dp"/>

                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                    <TableRow>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="Sets"
                                android:textStyle="bold"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="Reps"
                                android:textStyle="bold"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="Rest"
                                android:textStyle="bold"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                                android:id="@+id/setsTextView6"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="3"/>
                        <TextView
                                android:id="@+id/repsTextView6"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="15"/>
                        <TextView
                                android:id="@+id/restTextView6"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="30 seconds"/>
                    </TableRow>
                </TableLayout>

                <!-- Navigation Buttons -->
                <Button
                        android:id="@+id/nextworkout_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"/>
                <Button
                        android:id="@+id/done_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finish"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>