            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                <TableRow>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Sets"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Reps"
