                </TableRow>

                <TableRow>
                    <TextView
                            android:id="@+id/setsTextView6"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="3"/>
                    <TextView
                            android:id="@+id/repsTextView6"
