                    android:textSize="24sp"
                    android:layout_marginTop="16dp"/>
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                <TableRow>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Sets"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Reps"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Rest"
                            android:textStyle="bold"/>
                </TableRow>

                <TableRow>
                    <TextView
                            android:id="@+id/setsTextView2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="3"/>
                    <TextView
                            android:id="@+id/repsTextView2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="12"/>
                    <TextView
                            android:id="@+id/restTextView2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="30 seconds"/>
                </TableRow>
            </TableLayout>

            <!-- Workout 3 -->
            <ImageView
                    android:layout_width="350dp"
                    android:layout_height="398dp"
                    android:background="@drawable/dumbbell_shrug"
                    android:id="@+id/imageView3"/>

            <TextView
                    android:id="@+id/workoutNameTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workout 3: Shoulder Press"
