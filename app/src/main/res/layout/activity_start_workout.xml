<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".start_workout">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Workout 1 -->
            <ImageView
                    android:layout_width="221dp"
                    android:layout_height="398dp"
                    android:background="@drawable/_5d92c6e_a92e_4e17_8491_a6d87ccd2db0_12"
                    android:id="@+id/imageView1"/>
            <TextView
                    android:id="@+id/workoutNameTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workout 1: Dumbell Curls"
                    android:textSize="24sp"
                    android:layout_marginTop="16dp"/>

            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                <TableRow>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Sets"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Reps"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Rest"
                            android:textStyle="bold"/>
                </TableRow>

                <TableRow>
                    <TextView
                            android:id="@+id/setsTextView1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="4"/>
                    <TextView
                            android:id="@+id/repsTextView1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="15"/>
                    <TextView
                            android:id="@+id/restTextView1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="45 seconds"/>
                </TableRow>
            </TableLayout>

            <!-- Workout 2 -->
            <ImageView
                    android:layout_width="212dp"
                    android:layout_height="398dp"
                    android:background="@drawable/dumbbell_lateral_raises"
                    android:id="@+id/imageView2"/>
            <TextView
                    android:id="@+id/workoutNameTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
