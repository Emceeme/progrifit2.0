            <!-- Workout 4 -->
            <ImageView
                    android:layout_width="212dp"
                    android:layout_height="398dp"
                    android:background="@drawable/incline_bench_press_1024x633"
                    android:id="@+id/imageView4"/>

            <TextView
                    android:id="@+id/workoutNameTextView4"
                    android:layout_width="wrap_content"
